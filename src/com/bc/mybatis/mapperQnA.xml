<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="qbookstore">
	<select id="selectall" resultType="com.bc.model.vo.QnAVO">
		SELECT * FROM QNA
	</select>	
	
	<select id="selectone" parameterType="int" resultType="com.bc.model.vo.QnAVO">
		SELECT * FROM QNA 
		 WHERE Q_NUM = #{qNum}
	</select>
	
	<insert id="insert" parameterType="int">
		INSERT INTO QNA 
		VALUES(QNA_SEQ.NEXTVAL, #{memberId(세션에서)}, #{userName(세션에서)}, #{password(세션에서)}, 
			#{subject}, #{category}, #{rContent}, #{upload}, #{bCode}, 
			#{bType}, SYSDATE)
	</insert>
</mapper>

